<h3><%= @user.name %>, <%= @user.email %></h3>
<%= link_to @user.followers.count, followers_user_path(@user) %>人のフォロワー
<%= link_to @user.following.count, following_user_path(@user) %>人をフォロー

<%= render 'follow_form' if logged_in? %>

<% if logged_in? %>
<ul>
    <li><%= link_to "ユーザー情報の編集", edit_user_path(current_user) %></li>
</ul>
<% end %>

<% if logged_in? %>
  <%= render 'shared/micropost_form' %>
<% end %>

<% if @user.microposts.any? %>
  <h3><%= @user.microposts.count %>件の投稿</h3>
  <ol>
    <%= render @microposts %>
  </ol>
<% end %>