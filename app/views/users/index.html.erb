<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user%>
      <%= user.email %>
      <% if current_user.admin? && !current_user?(user) %>
        <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %>
      <% end %>
    </li>
  <% end %>
</ul>
